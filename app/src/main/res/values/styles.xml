<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchViewStyle" parent="Widget.MaterialComponents.TimePicker.Display.TextInputEditText">
        <item name="background">@drawable/gray_card_shape</item>
    </style>

    <style name="Space">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>