<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="SelectMainCategory" parent="DefaultText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotSelectMainCategory" parent="DefaultText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>


    <style name="CardStockNameText" parent="DefaultText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>